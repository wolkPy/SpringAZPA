package py.com.qa.actions;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import javax.swing.JButton;

public final class Action implements ActionListener, KeyListener {

	private String event;

	public Action(String event) {
		super();
		this.event = event;
	}

	public void actionPerformed(ActionEvent e) {
		if (event.equalsIgnoreCase("SALIR")) {
			salir();
		}
	}

	/*
	 * MÉTODO PARA SALIR DE SISTEMA
	 */

	public static void salir() {
		System.exit(0);
	}

	/*
	 * MÉTODO PARA CONFIRMA O ENVIAR - SUBMIT
	 */
	public static void Submit(JButton boton) {

	}

	@Override
	public void keyTyped(KeyEvent e) {

	}

	@Override
	public void keyPressed(KeyEvent e) {

	}

	@Override
	public void keyReleased(KeyEvent e) {

	}
}